        try {
            const result = await this.dbManager.query(
                'SELECT COUNT(*) FROM topvisor.positions WHERE event_date = $1',
                [date]
            );
            return parseInt(result.rows[0].count, 10);
        } catch (error) {
            this.logger.warn(`Ошибка проверки существующих данных: ${error.message}`);
            return 0;
        }
    }

